                    <div class="col-sm-5">
                        <!-- product carousel -->
                        <div id="ProductCarousel" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="item active"><img src="~/images/@Model.p.Img" class="img-responsive" alt="product"></div>

                            </div>
                            <!-- Controls -->
                            <a class="left carousel-control" href="#ProductCarousel" role="button" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                            <a class="right carousel-control" href="#ProductCarousel" role="button" data-slide="next"><i class="fa fa-angle-right"></i></a>
                        </div>
                        <!-- product carousel -->
                    </div>

                    <!-- product information -->
                    <div class="col-sm-7 information">
                        <h1>@Model.p.ProductName</h1>
                        <div class="price-box">
                            @foreach (var p in Model.pList)
                            {

                                <span>@p.memberName</span><span>价：</span><span class="price">@p.realPrice</span>
                            }
                        </div>
                        <div class="clearfix spacer">
                            <div class="pull-left"><input class="form-control quantity" placeholder="Quantity" type="number"></div>
                            <div class="pull-right"><a href="/Cart/AddCart/@Model.p.ObjId?retUrl=@WebUtility.UrlEncode(ViewBag.contBuy)" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> 添加到购物车</a></div>
                        </div>

                        <div class="description-tabs">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="active"><a href="#description" role="tab" data-toggle="tab">描述</a></li>
                                <li><a href="#review" role="tab" data-toggle="tab">评论(2)</a></li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active" id="description">
                                    @Model.p.Description
                                </div>
                                <div class="tab-pane" id="review">

                                    <div class="reviews">
                                        <h5>辛***马（匿名）：</h5>
