    <div class="content inside-page product-details">
        <div class="breadcrumb text-left text-primary"><a asp-area="" asp-controller="Home" asp-action="index"><span class="text-primary">首页</span></a> / <a href="#"><span class="text-primary">Collections </span></a> / @Model.p.ProductName</div>

        <div class="row">
            <div class="col-sm-9">
