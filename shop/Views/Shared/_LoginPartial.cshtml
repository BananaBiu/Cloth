@using Microsoft.AspNetCore.Identity
@using shop.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>

                <a href="/Cart?retUrl=@WebUtility.UrlEncode(ViewBag.contBuy)">

                    <span lang="zh-cn">我的购物车</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">欢迎 @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">退出</button>
            </li>
        </ul>
    </form>
}
else
{

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a onclick="changeSelBtn()" >
                <span class="glyphicon glyphicon-shopping-cart"></span>
                cart
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="register">
                <span class="glyphicon glyphicon-user"></span>
                register
            </a>
        </li>
        <li>

            <a asp-area="" asp-controller="Account" asp-action="login">
                <span class="glyphicon glyphicon-log-in"></span>
                login
            </a>
        </li>
    </ul>
    <script>
        function changeSelBtn() {
            alert("请先登录!!!");

        }

    </script>
}